<!doctype html>
<html>
<head>
    <link rel="stylesheet" href="~/css/index2.css" asp-append-version="true" />
</head>
<body>





    @model List<Auction.Models.Lot>
    <div class="lo">
        <h2>My Lots</h2>
    </div>
    <br />   <br />   <br />   <br />   <br />   <br />   <br />

    @if (Model.Count != 0)
    {

<table class="table">
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Availability Status</th>
        <th>Category</th>
        <th>Details</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (var lot in Model)
    {
<tr>
    <td>@lot.Name</td>
    <td>@lot.Price</td>
    @if (lot.AvailabilityStatus == 0)
    {
<td>Active</td>
 }
else
{
<td>Expired</td>
}
    <td>@lot.Category.CategoryName</td>
    <td><a href="lot/DetailOfMyLot?id=@lot.Id" class="btn btn-info ">Detail</a></td>
    @if (@lot.AvailabilityStatus == 0)
    {
<td><a href="lot/update?id=@lot.Id" class="btn btn-warning ">Close</a></td>
 }
else
{
<td>Closed</td>
}
    <td><a href="lot/delete?id=@lot.Id" class="btn btn-danger ">Delete</a></td>
</tr>
}
</table>}
    <a href="lot/create" class="btn btn-success">Create</a>
    <div class="lastt"></div>
</body>
</html>