<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Auction</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js" charset="utf-8"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <h1 class="logo">Bidders-<span style="color:#273b91;">Baazar</span>inc.</h1>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Auction</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        @if (Context.User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Lot" asp-action="Index">My Lots</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Purchase" asp-action="Index">History</a>
                            </li>
                        }
                    </ul>
                    @if (Context.User.Identity.IsAuthenticated)
                    {
                        <a class="btn btn-primary" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                    }
                    else
                    {
                        <a class="btn btn-warning" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                    }
                </div>
            </div>
        </nav>
    </header>

 
    <script src="script.js"></script>




    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="containerr">
            <div class="left section">
                <h2>About Us</h2>
                <div class="contentt">
                    <p>Bidders Baazar is a platform where buyers and sellers come together to purchase and sell their fine arts and collectors item with an auction of a modern twist.</p>
                    <div class="social">
                        <a href="https://biddersbaazar.com"><span class="fab fa-facebook-f"></span></a>
                        <a href="https://instagram.com/biddersbaazar"><span class="fab fa-instagram"></span></a>
                    </div>
                </div>
            </div>

            <div class="center section">
                <h2>Contact Us</h2>
                <div class="contentt">
                    <div class="place">
                        <span class="fas fa-map-marker-alt"></span>
                        <span class="text"> Addis Ababa, Ethiopia</span>
                    </div>
                    <div class="phone">
                        <span class="fas fa-phone-alt"></span>
                        <span class="text"> +251-9000000</span>
                    </div>
                    <div class="email">
                        <span class="fas fa-envelope"></span>
                        <span class="text"> contact@biddersbazzare.com</span>
                    </div>
                </div>
            </div>

      
        </div>

        <div class="footer-bottom">
            <center>
                <div><span>   &copy; 2022 - Auction - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></span></div>

            </center>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



