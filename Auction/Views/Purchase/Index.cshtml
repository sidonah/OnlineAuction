<!doctype html>
<html>
<head>
    <link rel="stylesheet" href="~/css/purchase.css" asp-append-version="true" />
</head>
<body>



    @model List<Auction.Models.Purchase>


    <h1 class="toast-header">Purchase History</h1>
    @if (Model.Count != 0)
    {
<table class="table">
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Category</th>
        <th>Email</th>
    </tr>
    @foreach (var purchase in Model)
    {
<tr>
    <td>@purchase.Lot.Name</td>
    <td>@purchase.Lot.Price</td>
    <td>@purchase.Lot.Category.CategoryName</td>
    <td>@purchase.Lot.User.Email</td>
</tr>
}
</table> }
else
{
<h2>You have not made a purchase yet</h2>}
</body>
</html>